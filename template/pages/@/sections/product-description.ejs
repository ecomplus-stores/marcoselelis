<% if (_.state.body_html) { %>
  <section id="product-description" class="product-description my-4 my-md-5 pb-5">
    <div class="container">
      <h2 class="text-center">
        <%= _.dictionary('productDescription') %>
      </h2>  
      <small class="text-center">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Donec odio. Quisque volutpat mattis eros.</small>
      
      <div class="html-clearfix mt-5">
        <%- _.state.body_html.replace(
          /<img ([^/>]+)?src=['"]([^'"]+)['"]([^/>]+)?\/?>/g,
          '<img class="lozad" data-src="$2" $1 $3>'
        ).replace(
          /<img class="lozad" data-src="([^'"]+)"([^>]+)class=['"]([^'"]+)['"]([^/>]+)?>/g,
          '<img class="lozad $3" data-src="$1" $2 $4>'
        ) %>
      </div>
    </div>
  </section>
<% } %>

<%- await include('@/helpers/widgets-append', {
  _, opt: {}, field: 'productDescriptionAppend'
}) %>
