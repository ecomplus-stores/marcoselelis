<% if (Array.isArray(opt.banners) && opt.banners.length) { %>
    <% const colSize = Math.ceil(12 / opt.banners.length) %>
    <div class="banners-grid my-3 my-md-3">
      <div class="<%= opt.container %> <%= opt.padding %>">
        <div class="row mx-0">
          <% for (let i = 0; i < opt.banners.length; i++) { %>
            <div class="col-12 col-lg 
              <%= opt.padding %>  
              pt-md-<%= opt.padding_top %> 
              pt-<%= opt.padding_top_m %> 
              mt-md-<%= opt.margin_top %> 
              mt-<%= opt.margin_top_m %> 
              pb-md-<%= opt.padding_bottom %> 
              pb-<%= opt.padding_bottom_m %> 
              mb-md-<%= opt.margin_bottom %> 
              mb-<%= opt.margin_bottom_m %>">
              <%- await include('@/sections/inc/apx_banner', { _, opt: opt.banners[i] }) %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  <% } %>
  