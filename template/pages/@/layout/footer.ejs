<%
// load footer options and contacts from content
const footer = _.cms('footer') || {}
const apx_footer = _.cms('apx_footer') || {}
const contacts = _.cms('contacts') || {}
const themeCustom = _.settings.theme.custom || ''
%>

<footer class="" id="apx-footer">
  <div class="container ">
    <div class="row py-5">
      <div class="col-md-4 col-12">
        <div class="apx-newsletter">
          <div class="mb-4">
            <img src="/assets/icon_footer.svg"/>
          </div>
          <h4>Fique por dentro de todas ofertas e novidades</h4>
          <form action="" class="mt-4">
            <input type="mail" placeholder="Seu e-mail...">
            <button><img src="/assets/arrow-right.svg"/></button>
          </form>
          <p class="mt-3">Ao se inscrever você concorda com os <a href="/pages/politica-de-privacidade">termos de política e privacidade</a></p>
          <% if (footer.contacts.socials) { %>
            <p class="footer__social">
              <%- await include('@/layout/inc/networks', { _, contacts }) %>
            </p>
          <% } %>
        </div>

      </div>
      <div class="col-md-7 col-12 offset-md-1 content mt-3">
        <div class="row mt-4 pt-5 justify-content-between">
          <div class="footer__contacts col-md-auto col-12">
            <% if (footer.contacts.title) { %>
              <h4>
                <%= footer.contacts.title %>
              </h4>
            <% } %>
    
            <ul class="list-unstyled">
              <% if (footer.contacts.phone_wpp) { %>
                <% if (contacts.whatsapp) { %>
                  <li>
                    <span class="footer__list-icon">
                      <img src="/assets/footer_whatsapp.svg"/>
                    </span>
                    <a
                      href="javascript:;"
                      target="_blank"
                      rel="noopener"
                      class="whatsapp-link"
                      data-tel="<%= contacts.whatsapp.replace(/\D/g, '') %>"
                    >
                      <%= contacts.whatsapp %>
                    </a>
                  </li>
                <% } %>
                <% if (contacts.phone) { %>
                  <li>
                    <span class="footer__list-icon">
                      <img src="/assets/footer_phone.svg"/>
                    </span>
                    <a
                      href="tel:+<%= contacts.phone.replace(/\D/g, '') %>"
                      target="_blank"
                      rel="noopener"
                    >
                      <%= contacts.phone %>
                    </a>
                  </li>
                <% } %>
              <% } %>
              <% if (footer.contacts.email) { %>
                <li>
                  <span class="footer__list-icon">
                    <img src="/assets/footer_mail.svg"/>
                  </span>
                  <a href="mailto:<%= contacts.email %>" target="_blank" rel="noopener">                    
                    <%= contacts.email %>
                  </a>
                </li>
              <% } %>
              <% if (footer.contacts.address) { %>
                <li class="mt-2">
                  <p>
                    <%= contacts.address %>
                  </p>
                </li>
              <% } %>
            </ul>
    
            
          </div>
          <% if (apx_footer.links) { %>
              <% apx_footer.links.forEach(({ title, list })=> { %>
                <div class="col-12 col-md-auto">
                  <h4><%= title %></h4>
                  <ul class="links">
                    <% list.forEach(({ item })=> { %>
                      <li>
                        <a href="<%= item.url %>">
                          <%= item.title %>
                        </a>
                      </li>
                    <% }) %>
                  </ul>
                </div>
              <% }) %>
          <% } %>
          <!--<div class="col-12 col-md-auto">
            <p class="footer__payment-methods">
              <% Object.keys(footer.payment_methods).forEach(method => { %>
                <% if (footer.payment_methods[method]) { %>
                  <i class="pay-icon pay-icon--<%= method %>"></i>
                <% } %>
              <% }) %>
            </p>
            <div class="footer__stamps">
              <%- await include(`@/sections/stamps`, { _, opt: { stamps: footer.stamps } }) %>
            </div>
          </div>-->
        </div>  
      </div>
    </div>
      
  </div>
  <div class="footer_credits py-3">
    <div class="container">
      <div class="d-flex align-items-center justify-content-between">
        <div>
          <span>
            <%= footer.credits || `© ${_.store.name} / ${contacts.address} / ${contacts.doc_number}` %>
          </span>
        </div>
        <div class="d-flex align-items-center">
